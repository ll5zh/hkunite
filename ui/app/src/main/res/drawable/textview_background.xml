<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient for subtle depth instead of flat color -->
    <gradient
        android:startColor="#F9F9F9"
    android:endColor="#DFDFDF"
    android:angle="90"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Soft outline in brand text color -->
    <stroke android:width="1dp" android:color="@color/brand_text"/>

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp"/>
</shape>

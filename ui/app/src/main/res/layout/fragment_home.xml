<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Three lines of text at the top -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome User!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have _ upcoming events and"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_ invitations"
            android:textSize="16sp"
            android:gravity="start"
            android:layout_marginBottom="32dp" />

        <!-- Button Section (Horizontal Layout) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Featured Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Three buttons in a horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:weightSum="3">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Explore"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Get Started"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Learn More"
                android:textAllCaps="false"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Image Carousel Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image Gallery"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageCarousel"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>

</ScrollView>
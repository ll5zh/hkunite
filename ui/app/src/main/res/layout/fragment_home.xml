<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Three lines of text at the top -->
        <TextView
            android:layout_marginTop="45dp"
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome User!"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="8dp"
            android:textColor="@color/brand_text"/>

        <TextView
            android:id="@+id/upcomingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have _ upcoming events and"
            android:textSize="25sp"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:textColor="@color/brand_text"/>

<!--        <TextView-->
<!--            android:id="@+id/invitationsText"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="_ invitations"-->
<!--            android:textSize="25sp"-->
<!--            android:gravity="start"-->
<!--            android:layout_marginBottom="32dp" />-->

        <!-- Three buttons in a horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonUpcoming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upcoming"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                android:padding="5dp"
                android:minHeight="56dp"
                android:backgroundTint="@color/button_background_tint"
                android:textColor="@color/button_text_color"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>

            <Button
                android:id="@+id/buttonHosting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hosting"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                android:padding="5dp"
                android:minHeight="56dp"
                android:backgroundTint="#3F8033"
                android:textColor="@color/button_text_color"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>

            <Button
                android:id="@+id/buttonInvitations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invitations"
                android:textAllCaps="false"
                android:padding="5dp"
                android:minHeight="56dp"
                android:backgroundTint="@color/brand_text"
                android:textColor="@color/button_text_color"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="16dp"/>

        </LinearLayout>

        <!-- Image Carousel Section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="0dp" />
    </LinearLayout>

</ScrollView>

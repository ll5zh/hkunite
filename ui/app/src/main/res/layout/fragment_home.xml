<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Three lines of text at the top -->
        <TextView
            android:layout_marginTop="45dp"
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome User!"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/upcomingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have _ upcoming events and"
            android:textSize="25sp"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/invitationsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_ invitations"
            android:textSize="25sp"
            android:gravity="start"
            android:layout_marginBottom="32dp" />

        <!-- Three buttons in a horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonUpcoming"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upcoming"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
                android:padding="5dp" />

            <Button
                android:id="@+id/buttonHosting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hosting"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
                android:padding="5dp" />

            <Button
                android:id="@+id/buttonInvitations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invitations"
                android:textAllCaps="false"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="5dp" />

        </LinearLayout>

        <!-- Image Carousel Section -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="0dp" />
    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Brand button style -->
    <style name="Widget.MyApp.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base text style -->
    <style name="Widget.MyApp.TextView" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/brand_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Explore category headings -->
    <style name="TextAppearance.Explore.Heading" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#114337</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Search box style -->
    <style name="Widget.Explore.SearchBox" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/brand_text</item>
        <item name="android:textColorHint">#80114337</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Nav bar active indicator -->
    <style name="MyNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#22114337</item>
    </style>

</resources>

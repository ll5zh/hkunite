<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Comp3330hkunite" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Global background gradient -->
        <item name="android:windowBackground">@drawable/gradient_background</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Global font -->
        <item name="android:fontFamily">@font/roboto</item>

        <!-- Default text appearance -->
        <item name="android:textColor">@color/app_text</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body</item>

        <!-- Override default widget styles -->
        <item name="buttonStyle">@style/Widget.MyApp.Button</item>
    </style>

    <!-- Custom text appearance -->
    <style name="TextAppearance.MyApp.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/app_text</item>
    </style>


</resources>
